{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      },
      "env": {
        "android.enableMinifyInReleaseBuilds": "true",
        "android.enableShrinkResourcesInReleaseBuilds": "true",
        "android.enableBundleCompression": "true"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      },
      "env": {
        "android.enableMinifyInReleaseBuilds": "true",
        "android.enableShrinkResourcesInReleaseBuilds": "true",
        "android.enableBundleCompression": "true"
      }
    },
    "production": {
      "autoIncrement": true,
      "distribution": "store",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "simulator": false
      },
      "env": {
        "android.enableMinifyInReleaseBuilds": "true",
        "android.enableShrinkResourcesInReleaseBuilds": "true",
        "android.enableBundleCompression": "true"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
